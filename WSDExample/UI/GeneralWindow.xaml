<Window x:Class="WSDExample.UI.GeneralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WSDExample.UI"
        mc:Ignorable="d"
        Title="GeneralWindow" Height="450" Width="800">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Exit">
                <MenuItem Header="Logout" Click="Logout_Click"/>
                <MenuItem Header="Exit"  Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="userNameLabel" Content="Label" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
</Window>
