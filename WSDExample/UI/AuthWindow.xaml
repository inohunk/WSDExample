<Window x:Name="Authorization" x:Class="WSDExample.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSDExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="307.836" Width="322.015"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
    >
        <TextBox Name="LoginTextBox" HorizontalAlignment="Center" Height="30" TextWrapping="Wrap" Width="150" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <PasswordBox Name="PasswordTextBox" HorizontalAlignment="Center" Height="30" VerticalAlignment="Center" Width="150" Margin="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Button Content="Login" HorizontalAlignment="Center" Width="150" Height="25" Click="LoginButton_Click"/>
        <Button Content="Register" HorizontalAlignment="Center" Width="150" Height="25" Margin="5" Click="RegisterButton_Click"/>
    </StackPanel>
</Window>
